{
  "private": true,
  "name": "javascript-packages",
  "version": "1.0.0",
  "description": "",
  "author": "Ryota Suzuki",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "basics::createPackage": "node ./tools/createPackage.js -t",
    "basics::version": "lerna version --conventional-commits --no-private -m 'chore: version up'",
    "basics::publish": "lerna publish from-package --yes",
    "basics::install": "yarn add -W",
    "basics::installDevelop": "yarn add -W --dev",
    "basics::remove": "yarn remove -W",
    "basics::clean": "lerna clean",
    "start": "lerna run --parallel start",
    "build": "lerna run build",
    "test": "lerna run --stream test",
    "lint": "lerna run --stream lint",
    "doc": "lerna run --stream doc"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@commitlint/config-lerna-scopes": "11.0.0",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.1",
    "@typescript-eslint/eslint-plugin": "4.0.0",
    "@typescript-eslint/parser": "3.10.1",
    "chalk": "4.1.0",
    "clean-webpack-plugin": "3.0.0",
    "commander": "6.1.0",
    "eslint": "7.9.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsdoc": "30.5.1",
    "eslint-plugin-prettier": "3.1.4",
    "fs-extra": "9.0.1",
    "husky": "3.1.0",
    "jest": "26.4.2",
    "jest-transform-stub": "2.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "rehack": "1.4.1",
    "rimraf": "3.0.2",
    "terser-webpack-plugin": "4.2.2",
    "ts-jest": "26.4.0",
    "ts-loader": "8.0.4",
    "ts-node": "9.0.0",
    "tslib": "2.0.1",
    "typedoc": "0.19.2",
    "typescript": "4.0.3",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-merge": "5.1.4",
    "webpackbar": "4.0.0"
  }
}

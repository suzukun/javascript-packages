{
  "private": true,
  "name": "javascript-packages",
  "version": "1.0.0",
  "description": "",
  "author": "Ryota Suzuki",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "basics::createPackage": "node ./tools/createPackage.js -t",
    "basics::version": "lerna version --conventional-commits --no-private -m 'chore: version up'",
    "basics::publish": "lerna publish from-package --yes",
    "basics::install": "yarn add -W",
    "basics::installDevelop": "yarn add -W --dev",
    "basics::remove": "yarn remove -W",
    "basics::bootstrap": "lerna bootstrap",
    "basics::clean": "lerna clean",
    "start": "lerna run --parallel start",
    "build": "lerna run build",
    "test": "lerna run --stream test",
    "lint": "lerna run --stream lint",
    "doc": "lerna run --stream doc"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@commitlint/config-lerna-scopes": "13.1.0",
    "@types/jest": "27.0.1",
    "@types/node": "17.0.33",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "chalk": "4.1.2",
    "clean-webpack-plugin": "4.0.0",
    "commander": "8.2.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsdoc": "36.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "html-webpack-plugin": "4.5.2",
    "husky": "3.1.0",
    "jest": "26.6.3",
    "jest-transform-stub": "2.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "11.1.2",
    "mz": "2.7.0",
    "prettier": "2.4.0",
    "rimraf": "3.0.2",
    "terser-webpack-plugin": "4.2.3",
    "textlint": "11.9.1",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-rule-preset-ja-spacing": "2.2.0",
    "textlint-rule-preset-ja-technical-writing": "7.0.0",
    "textlint-rule-spellcheck-tech-word": "5.0.0",
    "ts-jest": "26.5.6",
    "ts-loader": "9.2.1",
    "ts-node": "10.2.1",
    "tslib": "2.3.1",
    "typedoc": "0.20.34",
    "typescript": "4.2.3",
    "webpack": "4.46.0",
    "webpack-cli": "4.8.0",
    "webpack-merge": "5.8.0",
    "webpackbar": "4.0.0"
  }
}

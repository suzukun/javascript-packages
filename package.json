{
  "private": true,
  "name": "javascript-packages",
  "version": "1.0.0",
  "description": "",
  "author": "Ryota Suzuki",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "basics::createPackage": "lerna create",
    "basics::version": "lerna version --conventional-commits",
    "basics::install": "yarn add",
    "basics::installDevelop": "yarn add --dev",
    "basics::rootInstall": "yarn add -W",
    "basics::rootInstallDevelop": "yarn add -W --dev",
    "basics::remove": "yarn remove",
    "basics::rootRemove": "yarn remove -W",
    "basics::clean": "lerna clean",
    "start": "lerna run --parallel start",
    "build": "lerna run build",
    "test": "lerna run --stream test",
    "lint": "lerna run --stream lint"
  },
  "lint-staged": {
    "*.ts": "eslint --ext .ts --fix ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/jest": "26.0.9",
    "@typescript-eslint/eslint-plugin": "3.8.0",
    "@typescript-eslint/parser": "3.8.0",
    "clean-webpack-plugin": "3.0.0",
    "eslint": "7.6.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "26.2.2",
    "jest-transform-stub": "2.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "terser-webpack-plugin": "4.0.0",
    "ts-jest": "26.1.4",
    "ts-loader": "8.0.2",
    "ts-node": "8.10.2",
    "tslib": "2.0.0",
    "typescript": "3.9.7",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "webpack-merge": "5.1.1",
    "webpackbar": "4.0.0"
  }
}

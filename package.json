{
  "private": true,
  "name": "javascript-packages",
  "version": "1.0.0",
  "description": "",
  "author": "Ryota Suzuki",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "basics::createPackage": "node ./tools/createPackage.js -t",
    "basics::version": "lerna version --conventional-commits --no-private -m 'chore: version up'",
    "basics::publish": "lerna publish from-package --yes",
    "basics::install": "yarn add -W",
    "basics::installDevelop": "yarn add -W --dev",
    "basics::remove": "yarn remove -W",
    "basics::clean": "lerna clean",
    "start": "lerna run --parallel start",
    "build": "lerna run build",
    "test": "lerna run --stream test",
    "lint": "lerna run --stream lint",
    "doc": "lerna run --stream doc"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.0",
    "@commitlint/config-conventional": "12.0.0",
    "@commitlint/config-lerna-scopes": "12.0.1",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "chalk": "4.1.0",
    "clean-webpack-plugin": "3.0.0",
    "commander": "7.1.0",
    "eslint": "7.21.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "32.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "html-webpack-plugin": "4.5.2",
    "husky": "3.1.0",
    "jest": "26.6.3",
    "jest-transform-stub": "2.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "10.5.4",
    "mz": "2.7.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "terser-webpack-plugin": "4.2.3",
    "textlint": "11.8.2",
    "textlint-filter-rule-allowlist": "2.0.1",
    "textlint-rule-preset-ja-spacing": "2.0.2",
    "textlint-rule-preset-ja-technical-writing": "4.0.1",
    "textlint-rule-spellcheck-tech-word": "5.0.0",
    "ts-jest": "26.5.2",
    "ts-loader": "8.0.17",
    "ts-node": "9.1.1",
    "tslib": "2.1.0",
    "typedoc": "0.19.2",
    "typescript": "3.9.7",
    "webpack": "4.46.0",
    "webpack-cli": "4.5.0",
    "webpack-merge": "5.7.3",
    "webpackbar": "4.0.0"
  }
}
